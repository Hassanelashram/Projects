<header style="background-image: url('https://images.unsplash.com/photo-1505740420928-5e560c06d30e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80');">
<div class="container bg-custom">
  <div class="row my-5">
    <div class="col-10 mx-auto ">
       <%= simple_form_for(Lyric.new) do |f| %>
        <%= f.input :artist, placeholder: 'Artist name' %>
        <%= f.input :song, placeholder: 'Song name' %>
        <%= f.hidden_field :lyrics %>
        <%= f.submit 'Get Lyrics', class: 'btn btn-red' %>
      <% end %>
      <h4 style="color: white" class="text-center">or</h4>
      <%= link_to 'Random pick', root_url, class: 'btn btn-red'  %>
    </div>
  </div>
</header>

